<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BMI_Calculator.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="BMI Calculator" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>

        <StackLayout Padding="20" Spacing="5">
            <Label Text="Weight" FontSize="20" />
            <Entry x:Name="WeightEntry" Keyboard="Numeric" Placeholder="in pounds..." Text="" TextChanged="WeightEntry_TextChanged" />

            <Label Text="Height" FontSize="20" />
            <Entry x:Name="HeightEntry" Keyboard="Numeric" Placeholder="in inches..." Text="" TextChanged="HeightEntry_TextChanged" />

            <Label x:Name="BMILabel" Text="BMI: " FontSize="20" />
        </StackLayout>
    </StackLayout>

</ContentPage>
